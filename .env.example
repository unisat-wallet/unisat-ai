# =============================================================================
# UniSat API Configuration
# =============================================================================
UNISAT_API_KEY=your-api-key-here
UNISAT_API_BASE_URL=https://open-api.unisat.io

# =============================================================================
# AI Provider Configuration
# =============================================================================
AI_PROVIDER=anthropic

# Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-key-here
ANTHROPIC_BASE_URL=
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=4096

# OpenAI (alternative)
# OPENAI_API_KEY=your-openai-key-here
# OPENAI_BASE_URL=
# OPENAI_MODEL=gpt-4
# OPENAI_MAX_TOKENS=4096

# AgentKit (BytePlus AgentKit Runtime)
# AGENTKIT_BASE_URL=https://your-agentkit-runtime-url
# AGENTKIT_API_KEY=your-agentkit-api-key

# =============================================================================
# Server Configuration
# =============================================================================
PORT=3001
WS_PORT=3002
NODE_ENV=development

# =============================================================================
# Polling Intervals (milliseconds)
# =============================================================================
BLOCK_POLL_INTERVAL=60000
FEE_POLL_INTERVAL=30000
BRC20_POLL_INTERVAL=120000

# =============================================================================
# Cache & Rate Limiting
# =============================================================================
CACHE_TTL=300000
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=30

# =============================================================================
# Documentation Search
# =============================================================================
# Path to the LanceDB vector database (relative to backend directory)
DOC_SEARCH_DB_PATH=../doc-search/data/docs.lance
# Embedding provider: "openai" for OpenAI embeddings, "tfidf" for local TF-IDF
EMBEDDING_PROVIDER=tfidf
# Documentation source (auto-fetch from GitHub on startup in Docker)
DOCS_REPO_URL=https://github.com/unisat-wallet/unisat-dev-docs
DOCS_BRANCH=main
